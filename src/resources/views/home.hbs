<div class='mt-4 container'>
    <div class='row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-2'>
        {{#each phones}}
            <div class='col' style='min-width: 170px; max-width: 260px; width: calc(25vw-5px)'>
                <div class='card h-100 shadow rounded-4'>
                    <div class='text-center'>
                        <a href='/phones/{{this.slug}}'>
                            <img
                                src='{{this.image_title}}'
                                class='card-img-top'
                                alt='{{this.name}}'
                            />
                        </a>
                    </div>
                    <a href='/phones/{{this.slug}}'>
                        <div class='card-body'>
                            <h1
                                class='card-title fs-6 fw-bold'
                                style='height: 65px; color: #444'
                            >{{this.name}}
                            </h1>

                            <div class='mt-1 d-flex flex-row'>
                                {{#each this.specifications}}
                                    {{!-- <p
                                        class='py-1 px-2 me-2 border border-dark-subtle rounded-3'
                                        style='font-size: 12px;'
                                    >{{this}}
                                    </p> --}}
                                    <span
                                        class='me-2 badge rounded text-bg-light fw-normal border border-dark-subtle'
                                    >{{this}}</span>
                                {{/each}}
                            </div>

                            <p
                                class='card-text mt-2 text-danger fs-5 fw-bold'
                            >{{this.price_display}}
                            </p>
                            <p
                                class='p-1 bg-body-secondary bg-opacity-75 border border-light-subtle rounded-2'
                                style='font-size: 14px;'
                            >{{this.promotion}}
                            </p>
                        </div>
                    </a>
                    <div class='card-footer text-center'>

                        <a href='/phones/{{this.slug}}/edit' class='btn btn-primary w-75'>Chỉnh sửa</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>

